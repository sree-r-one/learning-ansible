# ğŸ³ Use official Node image - builder stage
FROM node:18-slim AS builder

# ğŸ“ Set working directory
WORKDIR /app

# ğŸ“¦ Copy package files first (for layer caching)
COPY package*.json ./

# ğŸ“¥ Install dependencies - use clean install for reproducible builds
RUN npm ci --only=production

# ğŸ³ Final stage with smaller image
FROM node:18-slim

# Set NODE_ENV
ENV NODE_ENV=production

# ğŸ“ Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Copy node_modules from builder stage
COPY --from=builder /app/node_modules ./node_modules

# ğŸ“‚ Copy application code
COPY . .

# ğŸŒ Expose the port your app runs on
EXPOSE 3000

# Add healthcheck
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD wget -qO- http://localhost:3000/api/health || exit 1

# ğŸš€ Run the app
CMD ["node", "index.js"]
